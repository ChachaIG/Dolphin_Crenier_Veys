<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.henallux.dolphin_crenier_veys.view.ResStatDivisionActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stat"
        android:id="@+id/textLabelStatDiv"
        android:background="#0098ff"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:gravity="center"
        android:padding="20dp" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollViewTab"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/textLabelStatDiv">

        <TableLayout
            android:layout_width="fill_parent"
            android:stretchColumns="0"
            android:layout_height="wrap_content"
            android:id="@+id/idTableDiv">
            <TableRow >
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/division"
                    android:padding="10dp"
                    android:textColor="#0098ff"
                    android:textStyle="bold"
                    android:textSize="18dp" />
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nbMatch"
                    android:padding="10dp"
                    android:textColor="#0098ff"
                    android:textStyle="bold"
                    android:textSize="18dp" />
            </TableRow>
        </TableLayout>

    </ScrollView>



</RelativeLayout>
