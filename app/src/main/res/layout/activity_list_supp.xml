<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.henallux.dolphin_crenier_veys.view.ListSuppActivity">

    <TextView
        android:id="@+id/labelListSupp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff6e19"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/suppMatch"
        android:textColor="#ffffff"
        android:textSize="22dp" />

    <ScrollView
        android:id="@+id/scrollViewAjout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/labelListSupp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:weightSum="1">

            <ListView
                android:id="@+id/listSupp"
                android:layout_width="wrap_content"
                android:layout_height="380dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/labelListSupp"
                android:layout_marginBottom="110dp"
                android:padding="15dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
