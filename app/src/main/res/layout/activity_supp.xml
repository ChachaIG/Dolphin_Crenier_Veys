<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.henallux.dolphin_crenier_veys.view.SuppActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/suppMatch"
        android:id="@+id/textLabel"
        android:background="#ff6e19"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:gravity="center"
        android:padding="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewSupp"
        android:layout_below="@+id/textLabel">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:weightSum="1">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/categorie"
                android:id="@+id/textCat"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="#cdcdcd"
                android:padding="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:id="@+id/listView"
                android:layout_below="@+id/textCat"
                android:layout_alignLeft="@+id/textCat"
                android:layout_alignStart="@+id/textCat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:id="@+id/textDate"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="#cdcdcd"
                android:padding="20dp"

                android:layout_below="@+id/textCat"
                android:layout_alignLeft="@+id/listView"
                android:layout_alignStart="@+id/listView"
                android:layout_alignRight="@+id/listView"
                android:layout_alignEnd="@+id/listView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/recupDateSupp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="145dp"
                android:layout_weight="0.20"
                android:padding="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lieu"
                android:id="@+id/textLieuSupp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="#cdcdcd"
                android:padding="20dp"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                android:layout_marginTop="-140dp" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:id="@+id/listViewLieu"
                android:layout_below="@+id/textLieu"
                android:layout_alignLeft="@+id/textCat"
                android:layout_alignStart="@+id/textCat" />

            <Button
                android:id="@+id/voirMatchButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/VoirMatchs"
                android:gravity="center"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
