<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.henallux.dolphin_crenier_veys.view.ListRechActivity">

    <TextView
        android:id="@+id/textLabelRech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0098ff"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/recherche"
        android:textColor="#ffffff"
        android:textSize="22dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textLabelRech">

        <ListView
            android:id="@+id/listViewRech"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textLabelRech"
            android:divider="#0098ff"
            android:padding="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />
    </ScrollView>

</RelativeLayout>
